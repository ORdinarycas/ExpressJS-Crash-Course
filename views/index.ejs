<% include partials/header.ejs %>

<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">會員管理系統 - Beta</h1>
    <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don't simply skip over it entirely.</p>
  </div>
</section>

<div class="section">
  <div class="container">
    <div class="row">
        <div class="col-sm">
    <h2>新增會員</h2>
      <% if(errors != undefined){ %>
        <ul>
          <% errors.forEach(function(error){ %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      <% } %>
    <form action="users/add" method="post">
      <div class="form-group">
          <label for="exampleFormControlInput1">會員名稱</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">@</span>
          </div>
          <input name="name" type="text" class="form-control" placeholder="您的姓名" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <small id="emailHelp" class="form-text text-muted">We'll never share your name with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">會員電子信箱</label>
        <input name="email" type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
      </div>
      <button type="submit" class="btn btn-primary">新增</button>
    </form>
  </div>
  <div class="col-sm">
    <h2><%= title %></h2>
    <% users.forEach(function(user){ %>
        <li>
          <%= user.name %>
          <%= user.email %> - <a href="#" class="deleteUser" data-id="<%= user._id %>">刪除此帳號</a>
        </li>
    <% }) %>
  </div>
    </div>
  </div>
</div>
<% include partials/footer.ejs %>